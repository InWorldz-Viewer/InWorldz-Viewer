<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<panel bottom="0" follows="left|top|right|bottom" height="600" left="0"
     mouse_opaque="true" name="panel_login" width="800">
  
	<web_browser border_visible="false" bottom="0" follows="top|left|bottom|right" left="0"
	     name="login_html" right="-1"
	     start_url="data:text/html,%3Chtml%3E%3Chead%3E%3C/head%3E%3Cbody bgcolor=%22#000000%22 text=%22ffffff%22%3E%3Ch1%3E%3Ctt%3Eloading...%3C/tt%3E%3C/h1%3E %3C/body%3E %3C/html%3E"
	     top="-1" />
	<string name="real_url">
		http://inworldz.com/loginscreen.php
	</string>
	<string name="forgot_password_url">
    http://inworldz.com/loginerror.php?error=2
  </string>
  
  <!-- FIRST AND LAST NAME -->
  
	<text bg_visible="false" border_drop_shadow_visible="false" border_visible="false"
	     bottom="54" drop_shadow_visible="true" follows="left|bottom"
	     font="SansSerif" h_pad="0" halign="left" height="16"
	     left="32" mouse_opaque="true" name="first_name_text" v_pad="0" width="160">
		First name:
	</text>
  <text bg_visible="false" border_drop_shadow_visible="false" border_visible="false"
     bottom_delta="0" drop_shadow_visible="true" follows="left|bottom"
     font="SansSerif" h_pad="0" halign="left" height="16"
     left="166" mouse_opaque="true" name="last_name_text" v_pad="0" width="120">
    Last name:
  </text>
	<combo_box bevel_style="in" border_style="line" border_thickness="1" bottom_delta="-26"
	     font="SansSerifLarge" handle_edit_keys_directly="true" height="24" left="32"
       max_chars="31" mouse_opaque="true" name="first_name_combo"
       select_all_on_focus_received="true" width="120" allow_text_entry="true" />
	<line_editor bevel_style="in" border_style="line" border_thickness="1" bottom_delta="0"
	     follows="left|bottom" font="SansSerifLarge" handle_edit_keys_directly="true"
	     height="24" left_delta="134" max_length="31" mouse_opaque="true"
	     name="last_name_edit" select_all_on_focus_received="true" width="120" />

  <!-- PASSWORD -->

  <text bg_visible="false" border_drop_shadow_visible="false" border_visible="false"
	     bottom="54" drop_shadow_visible="true" follows="left|bottom"
	     font="SansSerif" h_pad="0" halign="left" height="16"
	     left="300" mouse_opaque="true" name="password_text" v_pad="0" width="120">
    Password:
  </text>
  <line_editor bevel_style="in" border_style="line" border_thickness="1" bottom_delta="-26"
	     follows="left|bottom" font="SansSerifLarge" handle_edit_keys_directly="true"
	     height="24" left_delta="0" max_length="64" mouse_opaque="true"
	     name="password_edit" select_all_on_focus_received="true" width="120" />
  
  <!-- REMEMBER CHECKBOXES -->

  <check_box bottom_delta="-24" control_name="RememberName"
       follows="left|bottom" font="SansSerifSmall" height="16"
       initial_value="true" label="Remember name"
       left="32" mouse_opaque="true" name="remember_name_check" width="158" />
  <check_box bottom_delta="0" control_name="RememberPassword"
       follows="left|bottom" font="SansSerifSmall" height="16"
       initial_value="false" label="Remember password"
       left="300" mouse_opaque="true" name="remember_check" width="138" />

  <!-- LOGIN -->

  <button bottom="26" follows="left|bottom" font="SansSerif" halign="center"
       height="28" label="Log In"
       left="450" mouse_opaque="true" name="connect_btn" scale_image="TRUE"
       width="120" />
  
  <!-- START LOCATION -->

  <text bg_visible="false" border_drop_shadow_visible="false" border_visible="false"
	     bottom="54" drop_shadow_visible="true" follows="left|bottom"
	     font="SansSerif" h_pad="0" halign="left" height="16"
	     left_delta="150" mouse_opaque="true" name="start_location_text" v_pad="0"
	     width="135">
    Start location:
  </text>
  <combo_box allow_text_entry="false" bottom_delta="-22" follows="left|bottom" height="18"
	     left_delta="0" max_chars="255" mouse_opaque="true"
	     name="server_combo" width="135" />
  <combo_box allow_text_entry="true" bottom_delta="-20" follows="left|bottom" height="18"
	     left_delta="0" max_chars="255" mouse_opaque="true"
	     name="start_location_combo" width="135">
    <combo_item name="MyHome" value="My Home">
      My Home
    </combo_item>
		<combo_item name="MyLastLocation" value="My Last Location">
			My Last Location
		</combo_item>
		<combo_item name="Typeregionname" value="&lt;Type region name&gt;">
			&lt;Type region name&gt;
		</combo_item>
	</combo_box>

  <!-- ACCOUNT LINKS -->

  <text bg_visible="false" border_drop_shadow_visible="false" border_visible="false"
       bottom="54" drop_shadow_visible="true" follows="right|bottom"
       font="SansSerifSmall" font-style="UNDERLINE" h_pad="0" halign="right" height="16"
       left="-170" mouse_opaque="true" name="create_new_account_text" v_pad="0" width="160"
       hover="true" hover_color="50 115 185">
    Create new account?
  </text>
  <text bg_visible="false" border_drop_shadow_visible="false" border_visible="false"
       bottom_delta="-25" drop_shadow_visible="true" follows="right|bottom"
       font="SansSerifSmall" font-style="UNDERLINE" h_pad="0" halign="right" height="16"
       left_delta="0" mouse_opaque="true" name="forgot_password_text" v_pad="0" width="160"
       hover="true" hover_color="50 115 185">
    Forgot name or password?
  </text>

  <!-- VERSION -->

	<text bg_visible="false" border_drop_shadow_visible="false" border_visible="false"
	     bottom="4" drop_shadow_visible="true" follows="right|bottom"
	     font="SansSerifSmall" h_pad="0" halign="right" height="16"
	     left="-110" mouse_opaque="true" name="channel_text" v_pad="0" width="100"
	     hover="true" hover_color="50 115 185">
		[VERSION]
	</text>
  
</panel>
